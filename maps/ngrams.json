{
    "settings": {
        "analysis": {
            "filter": {
                "ngram_filter": {
                    "type":     "ngram",
                    "min_gram": 3,
                    "max_gram": 5,
                    "token_chars": [
                        "letter",
                        "digit"
                        ]
                }
            },
            "analyzer": {
                "ngrams": {
                    "type":      "custom",
                    "tokenizer": "standard",
                    "filter":   [
                        "lowercase",
                        "ngram_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "AUI": {
            "properties": {
                "STR": {
                    "type":     "string",
                    "analyzer": "ngrams",
                    "index":    "analyzed"
                },
                "AUI": {
                    "type":     "string",
                    "index":    "not_analyzed"
                },
                "CUI": {
                    "type":     "string",
                    "index":    "not_analyzed"
                },
                "SUI": {
                    "type":     "string",
                    "index":    "not_analyzed"
                }
            }
        }
    }
}
